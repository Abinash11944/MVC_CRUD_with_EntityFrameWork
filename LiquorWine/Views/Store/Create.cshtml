
@{
    ViewBag.Title = "Create";
}

@model LiquorWine.Models.ShopTb
@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Store", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="container">
        <div class="row">
            <div class="form-group">
                <label for="shopname">Shop Name:</label>

            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.ShopName, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShopName, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                <label for="ProductPrice">Owner Name:</label>


            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.OwnerName, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OwnerName, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="phone">Phone:</label>
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.ShopPhone, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShopPhone, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.ShopEmail, null, new { @class = "form-control", @type = "email" })
                @Html.ValidationMessageFor(model => model.ShopEmail, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label for="shopAddress">Shop Address:</label>
            </div>
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.ShopAddress, null, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShopAddress, "", new { @class = "text-danger" })
            </div>
          

            <div class="mt-4">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>

        </div>
    </div>
   
}

