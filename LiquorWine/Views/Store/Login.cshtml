@model LiquorWine.Models.ShopTb

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm("login", "Store", FormMethod.Post))
{

    <h2>Login</h2>
    <form>
        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.ShopEmail, null, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label>Phone</label>
            @Html.TextBoxFor(model => model.ShopPhone, null, new { @class = "form-control" })
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>

    <div>
        <div class="mt-3" role="group">
            <h4>Do you want to create new account?</h4>
            <a href="@Url.Action("Create", "Store", new { })" >New Account</a>
        </div>
    </div>

}





